<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg_selector_bule_white"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_12"
    android:paddingTop="@dimen/dp_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_middle_caption"
            style="@style/both_wrap"
            android:layout_marginBottom="@dimen/dp_6"
            android:textColor="@color/black_3e3e3e"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            tools:text="@string/home_catalog_text_btn" />

        <TextView
            android:id="@+id/home_middle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            tools:background="@drawable/home_head_stroke_catalog"
            tools:text="@string/home_catalog_text_description"
            tools:textColor="@color/stroke_catalog" />
    </LinearLayout>

    <ImageView
        android:id="@+id/home_middle_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/home_btn_catalog" />
</RelativeLayout>